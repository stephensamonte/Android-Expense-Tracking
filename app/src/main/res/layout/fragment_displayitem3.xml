<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/secondary_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:clickable="true"
            android:contentDescription="Open in youtube.."
            card_view:srcCompat="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lists_row_height"
            android:layout_margin="2dp"
            android:background="@android:color/white"
            android:clickable="false"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_small"
            android:paddingStart="@dimen/margin_small">

            <TextView
                android:id="@+id/text_view_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/created_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_list_name"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:text="Item"
                android:textColor="@color/light_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_view_created_by_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_list_name"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/created_by"
                android:layout_toRightOf="@+id/created_by"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_edit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_view_list_name"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                android:text="Ti"/>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>