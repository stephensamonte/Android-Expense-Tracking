<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fragment_shopping_lists"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/secondary_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:clickable="true"
        android:contentDescription="Open in youtube.."
        android:background="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lists_row_height"
        android:layout_margin="2dp"
        android:background="@android:color/white"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small">

        <TextView
            android:id="@+id/text_view_list_names"
            android:text="Hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/created_bys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_list_names"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:text="Item"
            android:textColor="@color/light_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view_created_by_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_list_names"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/created_bys"
            android:layout_toRightOf="@+id/created_bys"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_edit_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_view_list_names"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            android:text="Time"/>
    </RelativeLayout>
</LinearLayout>
